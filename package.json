{
  "name": "ts",
  "version": "1.0.0",
  "description": "The Selector, an abstract react grid displayed, content selector",
  "main": "src/index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack",
    "dev": "./node_modules/.bin/webpack --watch",
    "demo": "node ./src/demo.build.js && npm run dev",
    "test": "./node_modules/.bin/ava --verbose",
    "test:auto": "./node_modules/.bin/ava --watch --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flubox/ts.git"
  },
  "keywords": [
    "react",
    "grid",
    "content",
    "selector"
  ],
  "author": "Fran√ßois Lunette & Falihery Rasolonirainy (photobox)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flubox/ts/issues"
  },
  "homepage": "https://github.com/flubox/ts#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel": "^6.23.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-env": "^2.0.31",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "css-loader": "^0.28.1",
    "enzyme": "^2.8.2",
    "isomorphic-fetch": "^2.2.1",
    "npm-watch": "^0.1.9",
    "react-addons-test-utils": "^15.5.1",
    "restify": "^4.3.0",
    "sinon": "^2.2.0",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "ajv": "^5.1.5",
    "autobind-decorator": "^1.4.0",
    "babel": "^6.23.0",
    "css-loader": "^0.28.1",
    "json-loader": "^0.5.4",
    "mobile-detect": "^1.3.6",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-flexbox-grid": "^1.1.3",
    "react-ga": "^2.2.0",
    "sass-basis": "^6.4.0",
    "spinkit": "^1.2.5"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "isomorphic-fetch",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "watch": {
    "lint": "src/**/*.js",
    "test": "test/*.js"
  }
}
